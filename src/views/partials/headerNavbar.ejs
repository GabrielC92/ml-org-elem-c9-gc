<header>
    <a href="/" class="logo">
        <img src="/images/logo-mercado-liebre.svg" alt="logo-mercado-liebre">
    </a>
    <form id="form-search" class="search-bar" action="/search" method="GET">
        <input id="searcher" type="search" name="keywords" placeholder="Buscar productos, marcas y más">
        <button class="button-search" type="submit">
            <i class="fas fa-search"></i>
        </button>
    </form>
    <p><i class="fas fa-hand-holding-usd"></i>Comprá en cuotas y sin tarjeta de crédito</p>
    <div class="burger-menu">
        <i class="fas fa-bars"></i>
    </div>
    <nav class="navbar">
        <ul>
            <li><a href="/products">Todos los productos</a></li>
            <li><a href="/#offers">Ofertas</a></li>
            <li><a href="#">Tiendas Oficiales</a></li>
            <li><a href="/products/create">Vender</a></li>
            <li><a href="#">Ayuda</a></li>
        </ul>
    </nav>
    <nav class="login-bar">
        <ul>
            <% if (locals.userLogin) { %>
                <li><a href="#">Mi perfil </a><i class="far fa-user-circle"></i></li>
                <li><a href="/users/logout">Cerrar sesión </a><i class="fas fa-sign-out-alt"></i></li>
            <% } else { %>
                <li><a href="/users/registro">Creá tu cuenta </a><i class="far fa-id-card"></i></li>
                <li><a href="/users/login">Ingresá </a><i class="fas fa-sign-in-alt"></i></li>
            <% } %>
            <li><a href="#">Mis compras </a><i class="fas fa-shopping-basket"></i></li>
        </ul>
    </nav>
</header>