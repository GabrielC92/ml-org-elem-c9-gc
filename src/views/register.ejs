<!DOCTYPE html>
<html lang="es">
<%- include('partials/head', {title: 'Registro'}) %>
<body>
    <%- include('partials/headerNavbar') %>
    <main class="register">
        <form action="/" method="GET">
            <input class="text-data" type="text" name="name-lastName" id="" placeholder="Nombre y apellido" required>
            <span class="aviso">*Obligatorio</span>

            <input class="text-data" type="text" name="usuario" id="" placeholder="Nombre de usuario" required>
            <span class="aviso">*Obligatorio</span>

            <label class="titulo" for="born">Fecha de nacimiento</label>
            <input class="date" type="date" name="fecha" id="born" value="2021-07-22">
            <span class="aviso">*Obligatorio</span>

            <input class="text-data" type="text" placeholder="Domicilio" required>
            <span class="aviso">*Obligatorio</span>

            <label class="titulo" for="perfil">Perfil del usuario</label>
            <div class="select">
                <div>
                    <input class="radio" type="radio" name="perfil" id="comprar" value="comprar">
                    <label class="option" for="comprar">Comprador</label>
                </div>

                <div>
                    <input class="radio" type="radio" name="perfil" id="vender" value="vender">
                    <label class="option" for="vender">Vendedor</label>
                </div>
            </div>
            <span class="aviso">*Obligatorio</span>

            <label class="titulo" for="">Intereses</label>
            <div>
                <input class="check" type="checkbox" name="interes" id="electro" value="Electro">
                <label class="name-check" for="electro">Electro</label>
                
                <input class="check" type="checkbox" name="interes" id="moda" value="Moda">
                <label class="name-check" for="moda">Moda</label>
                
                <input class="check" type="checkbox" name="interes" id="hogar" value="Hogar">
                <label class="name-check" for="hogar">Hogar</label>
                
                <input class="check" type="checkbox" name="interes" id="juego" value="Juguetería">
                <label class="name-check" for="juego">Juguetería</label>
                
                <input class="check" type="checkbox" name="interes" id="sano" value="Vida-sana">
                <label class="name-check" for="sano">Vida sana</label>
            </div>
            
            <label class="titulo" for="foto">Foto de usuario</label>
            <input class="foto" type="file" name="foto" id="foto">

            <input class="text-data" type="password" name="password" id="password" placeholder="Elegí tu contraseña" required>
            <span class="aviso">*Obligatorio</span>
            <input class="text-data" type="password" name="confirm" id="confirm" placeholder="Confirmar contraseña" required>
            <span class="aviso">*Obligatorio</span>

            <div class="buttons">
                <button type="submit">Enviar</button>
                <button type="reset">Cancelar</button>
            </div>
        </form>
    </main>
    <%- include('partials/footer') %>
</body>
</html>