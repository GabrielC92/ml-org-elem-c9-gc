<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<img class="banner" src="/images/img-home-banner.jpg" alt="img-home-banner">
	<main class="home">
		<section class="row">
			<h2 class="products-title">Resultados de la búsqueda: <%= busqueda%></h2>
			<% if (products.length > 0) { %>
				<% products.forEach(product => { %>
					<article class="product-box">
						<a href="/products/detail/<%= product.id %>">
							<img class="product" src="/images/products/<%= product.image %>" alt="<%= product.image %>">
							<div class="details">
								<i class="fas fa-truck"></i>
								<span class="price">$<%= finalPrice(product.price,product.discount) %></span>
								<% if (product.discount > 0) { %>
									<p class="off"><%= product.discount %>% OFF</p>
								<% } %>
								<h4><%= product.name %></h4>
							</div>
						</a>
					</article>
				<% }) %>
			<% } else{ %>
				<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
			<% } %>
		</section>
	</main>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>