<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Todos los productos'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<main class="home">
		<section class="row">
			<h2 class="products-title">Todos los productos</h2>
			<% products.forEach(product => { %>
				<article class="product-box">
					<a class="link-product" href="/products/detail/<%= product.id %>">
						<img class="product" src="/images/products/<%= product.image %>" alt="<%= product.image %>">
						<div class="details">
							<i class="fas fa-truck"></i>
							<span class="price">$<%= finalPrice(product.price,product.discount) %></span>
							<% if (product.discount > 0) { %>
								<p class="off"><%= product.discount %>% OFF</p>
							<% } %>
							<h4><%= product.name %></h4>
						</div>
					</a>
				</article>
			<% }) %>
		</section>
	</main>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
	<%- include('partials/scripts') %>
</body>	
</html>